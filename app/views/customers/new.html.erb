<h1>New Customers!</h1>

<%= form_for @customer do |f| %>
  <%= f.label :name, class: "control-label" %>
  <%= f.text_field :name%><br>

  <%= f.label :gender, class: "control-label" %>
  <%= f.select :gender, [['male',1], ['female', 2], [ 'others', 3]]%><br>
  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>
